{
  "name": "copilot-actions",
  "displayName": "copilot-actions",
  "description": "Create Copilot sessions through actions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-actions.run-copilot",
        "title": "Copilot: Run Copilot with Prompt"
      },
      {
        "command": "copilot-actions.run-copilot-ask",
        "title": "Copilot: Run Copilot (Ask Mode)"
      },
      {
        "command": "copilot-actions.run-copilot-edit",
        "title": "Copilot: Run Copilot (Edit Mode)"
      },
      {
        "command": "copilot-actions.run-copilot-agent",
        "title": "Copilot: Run Copilot (Agent Mode)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
